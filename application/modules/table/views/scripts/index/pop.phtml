<!doctype html>
<html lang="us">
<head>
	<meta charset="utf-8">
	<title>jQuery UI Example Page</title>
	<script src="<?php echo $this->baseUrl()?>/js/jquery-ui-1.9.2.custom.js"></script>
	
	<script>
	function showpopup(){
		$( "#dialog1" ).dialog( "open" );
	}
	</script>
	<style>
	body{
		
		margin: 50px;
		
	}
	#dialog-link {
		padding: .4em 1em .4em 20px;
		text-decoration: none;
		position: relative;
	}
	#dialog-link span.ui-icon {
		margin: 0 5px 0 0;
		position: absolute;
		left: .2em;
		top: 50%;
		margin-top: -8px;
	}
	.ui-dialog-titlebar-close{display: none;}
	</style>
</head>
<body>

<!-- Dialog NOTE: Dialog is not generated by UI in this demo so it can be visually styled in themeroller-->

<p><a href="#" id="dialog-link" class="ui-state-default ui-corner-all">
<span class="ui-icon ui-icon-newwin"></span>Open Dialog</a></p>
<div id="dialog1" title="Dialog Title Here">
	
</div>

<select onChange="showpopup();">
	<option>aaaaaaa</option>
	<option>aaaaaaa</option>
</select>
</body>
</html>
